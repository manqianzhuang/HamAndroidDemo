<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".customview.day1.CustomViewBitmapShaperActivity">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical"        android:gravity="center_horizontal"        >        <com.superman.animate.customview.day1.BitmapShaperView            android:layout_width="match_parent"            android:layout_height="100dp"            />        <com.superman.animate.customview.day1.ComposeShaperView            android:layout_width="match_parent"            android:layout_height="100dp"            />        <com.superman.animate.customview.day1.PiePercentsView            android:id="@+id/piePercentsView"            android:layout_width="match_parent"            app:pieRadius="100dp"            app:pieTextColor="@color/colorAccent"            app:pieTextSize="16sp"            android:layout_height="500dp"/>    </LinearLayout></ScrollView>