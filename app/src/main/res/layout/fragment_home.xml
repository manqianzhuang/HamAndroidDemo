<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:gravity="center"    >    <androidx.appcompat.widget.AppCompatButton        android:id="@+id/btnJump"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="跳转"        android:textColor="@android:color/white"        android:backgroundTint="@color/colorPrimary"        />    <androidx.appcompat.widget.AppCompatButton        android:id="@+id/btnJumpWithAction"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="跳转Action(动画效果)"        android:textColor="@android:color/white"        android:backgroundTint="@color/colorPrimary"        />    <androidx.appcompat.widget.AppCompatButton        android:id="@+id/btnJumpWithString"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="跳转(带String类型参数)"        android:textColor="@android:color/white"        android:backgroundTint="@color/colorPrimary"        />    <androidx.appcompat.widget.AppCompatButton        android:id="@+id/btnJumpWithParcel"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="跳转(带序列化对象类型参数)"        android:textColor="@android:color/white"        android:backgroundTint="@color/colorPrimary"        /></LinearLayout>