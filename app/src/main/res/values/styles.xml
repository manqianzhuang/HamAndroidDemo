<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="rich_text">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:color">@android:color/darker_gray</item>
    </style>

    <style name="FullScreenStyle" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MainTabLayoutStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ProjectTabLayoutStyle">
        <item name="android:textColor">@color/color_f32</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WebViewActivityTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/ActivityRightEnterExistAnimation</item>
    </style>

    <style name="ActivityRightEnterExistAnimation" parent="@android:style/Animation.Activity">
<!--        <item name="android:activityOpenEnterAnimation">@anim/anim_right_enter</item>-->
<!--        <item name="android:activityOpenExitAnimation">@anim/anim_alpha_down</item>-->
<!--        <item name="android:activityCloseEnterAnimation">@anim/anim_alpha_up</item>-->
<!--        <item name="android:activityCloseExitAnimation">@anim/anim_right_exit</item>-->
    </style>

    <style name="WebDialogFragmentStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

<!--    <style name="WebDialogFragmentAnimation" parent="android:Animation">-->
<!--        <item name="android:windowEnterAnimation">@anim/anim_top_enter</item>-->
<!--        <item name="android:windowExitAnimation">@anim/anim_top_exit</item>-->
<!--    </style>-->

</resources>
